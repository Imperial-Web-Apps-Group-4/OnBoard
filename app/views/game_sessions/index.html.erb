<p id="notice"><%= notice %></p>

<h1>Game Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Game hash</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_sessions.each do |game_session| %>
      <tr>
        <td><%= game_session.game.name %></td>
        <td><%= game_session.game_hash %></td>
        <td><%= link_to 'Spectate', game_session %></td>
        <td><%= link_to 'Play', edit_game_session_path(game_session) %></td>
        <td><%= link_to 'Delete', game_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

