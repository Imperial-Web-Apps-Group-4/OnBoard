<div class="left-settings sidebar">
  <h1>Editing <%= @game.name %></h1>

  <%= render 'game_editor', game: @game %>
</div>

<div class="middle">
  <%= form_for(game) do |f| %>
    <% if game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
          <% game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field" id="image_upload">
      <%= label_tag :image, 'Add image: ' %>
      <%= file_field_tag :image %>
    </div>
    <p class="grey-text text-darken-4">Max size 10MB</p>
    <br/>

    <div id="images-display">
      <img v-for="image in images" v-bind:src="image" />
    </div>
    <div class="field">
      <%= f.hidden_field :state %>
    </div>

    <game-editor></game-editor>

  </div>

    <div class="actions">
      <%= f.submit class: 'btn' %>
    </div>
  <% end %>

</div>

<div class="right-settings sidebar">
  <h2>Toolbox</h2>
  <editor v-bind:game="game"></editor>
</div>
