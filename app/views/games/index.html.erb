<div class="games">
  <% @games.each do |game| %>
    <section class="card">
      <div class="card-image">
        <img src="/backgammon.jpg">
        <%= link_to game, class: 'card-hover-overlay' do %>
          <i class="material-icons">play_arrow</i>
        <% end %>
        <%= link_to edit_game_path(game), :class => "btn-floating halfway-fab waves-effect waves-light red" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
      <div class="card-content">
        <span class="card-title grey-text text-darken-4"><%= truncate game.name, :length => 35 %></span>
        by <%= game.user.name %>
      </div>
    </section>
  <% end %>
</div>

