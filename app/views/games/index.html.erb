<div class="games">

    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.state %></td>
        <td><%= game.game_session.count %></td>
        <td><%= button_to 'New session', game_sessions_path(game_id: game.id), method: :post %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

</div>