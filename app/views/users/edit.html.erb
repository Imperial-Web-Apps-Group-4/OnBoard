<div class="thin-page">
  <h2>Edit profile</h2>

  <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :about %>
        <%= f.text_field :about %>
      </div>

      <div class="field">
        <%= f.check_box :accessibility %>
        <%= f.label :accessibility, 'Accessibility mode (For visual impairments - bigger fonts, contrasting colours)' %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>

  <%= button_to 'Cancel', user_path(@user), method: :get %>
</div>
