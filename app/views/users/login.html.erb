<div class="thin-page">
  <h2>Login</h2>
  
  <%= form_tag(method: "post") do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= 'Login unsuccessful, try again' if @failed %>
    <div class="actions">
      <%= submit_tag 'Login' %>
    </div>
  <% end %>
</div>
